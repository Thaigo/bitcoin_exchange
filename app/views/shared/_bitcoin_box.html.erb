<div class="exchange_box">
  <div class="card">
    <div class="card-header text-center">
      Converta para Bitcoin
    </div>
    <div class="card-block">
      <%= form_tag("/bitcoin", method: "post", id: "bitcoin_form") do %>
        <div class="local_currency">
          <div class="form-group">
            <p class="title">Moeda Local</p>
            <%= select_tag "currency", options_for_select(currency_select, "BRL"), class: "form-control", id: "bit_currency" %>
          </div>
          <div class="form-group">
            <input type="number" name="quantity" id="bit_quantity" class="form-control" placeholder="$10" step="any" required>
          </div>
          
          <div class="form-group">
            <input type="text" id="bit_result" name="result" class="form-control" placeholder="Valor em Bitcoin" readonly>
          </div>
        </div>    
        
        <div>
          <button type="submit" class="btn btn-primary btn-exchange col-md-12">CONVERTER</button>
        </div>
      <% end %>
    </div>
  </div>
</div>